{
    "manifest_version": 3,
    "version": "1.0.1",
    "name": "Shortcut Out Of Shorts",
    "description": "Reminds you every 2 minutes if you're on 'shorts' or 'x.com' to help break addiction.",
    "permissions": [
        "activeTab",
        "notifications",
        "alarms",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}